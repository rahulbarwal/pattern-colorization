    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "options": {
        "statusbar": {
          "hide": false
        }
      },
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
