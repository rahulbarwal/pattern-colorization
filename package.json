        }
      }
    ],
    "keybindings": [
      {
        "command": "patternColorization.jumpToNext",
        "key": "f3",
        "mac": "cmd+g",
        "when": "editorTextFocus"
      },
      {
        "command": "patternColorization.jumpToPrevious",
        "key": "shift+f3",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
