{
  "name": "pattern-colorization",
  "displayName": "Pattern Colorization",
  "description": "Highlight up to 8 words/patterns with different background colors",
  "version": "1.0.6",
  "publisher": "shaktiman",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rahulbarwal/pattern-colorization.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "highlight",
    "pattern",
    "colorization",
    "search",
    "words"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "patternColorization.addPattern",
        "title": "Add Pattern",
        "category": "Pattern Colorization",
        "icon": "$(add)",
        "enablement": "true"
      },
      {
        "command": "patternColorization.addFromSelection",
        "title": "Add Pattern from Selection",
        "category": "Pattern Colorization",
        "icon": "$(symbol-text)",
        "enablement": "editorHasSelection"
      },
      {
        "command": "patternColorization.deletePattern",
        "title": "Delete Pattern",
        "category": "Pattern Colorization",
        "icon": "$(trash)"
      },
      {
        "command": "patternColorization.editPattern",
        "title": "Edit Pattern",
        "category": "Pattern Colorization",
        "icon": "$(edit)"
      },
      {
        "command": "patternColorization.togglePattern",
        "title": "Toggle Pattern",
        "category": "Pattern Colorization",
        "icon": "$(eye)"
      },
      {
        "command": "patternColorization.clearPatterns",
        "title": "Clear All Patterns",
        "category": "Pattern Colorization",
        "icon": "$(clear-all)"
      },
      {
        "command": "patternColorization.refreshPatterns",
        "title": "Refresh Patterns",
        "category": "Pattern Colorization",
        "icon": "$(refresh)"
      },
      {
        "command": "patternColorization.enableHighlighting",
        "title": "Enable Highlighting",
        "category": "Pattern Colorization",
        "icon": "$(eye-closed)"
      },
      {
        "command": "patternColorization.disableHighlighting",
        "title": "Disable Highlighting",
        "category": "Pattern Colorization",
        "icon": "$(eye)"
      },
      {
        "command": "patternColorization.importPatterns",
        "title": "Import Patterns",
        "category": "Pattern Colorization",
        "icon": "$(cloud-download)"
      },
      {
        "command": "patternColorization.exportPatterns",
        "title": "Export Patterns",
        "category": "Pattern Colorization",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "patternColorization.showStats",
        "title": "Show Statistics",
        "category": "Pattern Colorization",
        "icon": "$(graph)"
      },
      {
        "command": "patternColorization.jumpToNext",
        "title": "Jump to Next Highlight",
        "category": "Pattern Colorization",
        "icon": "$(arrow-down)"
      },
      {
        "command": "patternColorization.jumpToPrevious",
        "title": "Jump to Previous Highlight",
        "category": "Pattern Colorization",
        "icon": "$(arrow-up)"
      },
      {
        "command": "patternColorization.jumpToNextSelectedPattern",
        "title": "Jump to Next Selected Pattern Occurrence",
        "category": "Pattern Colorization",
        "icon": "$(arrow-right)"
      },
      {
        "command": "patternColorization.jumpToPreviousSelectedPattern",
        "title": "Jump to Previous Selected Pattern Occurrence",
        "category": "Pattern Colorization",
        "icon": "$(arrow-left)"
      },
      {
        "command": "patternColorization.changePatternColor",
        "title": "Change Pattern Color",
        "category": "Pattern Colorization",
        "icon": "$(color-mode)"
      }
    ],
    "views": {
      "patternColorization": [
        {
          "id": "patternColorizationView",
          "name": "Patterns",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "patternColorization",
          "title": "Pattern Colorization",
          "icon": "$(symbol-color)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "patternColorization.addPattern",
          "when": "view == patternColorizationView",
          "group": "navigation@1"
        },
        {
          "command": "patternColorization.enableHighlighting",
          "when": "view == patternColorizationView && !config.patternColorization.enabled",
          "group": "navigation@2"
        },
        {
          "command": "patternColorization.disableHighlighting",
          "when": "view == patternColorizationView && config.patternColorization.enabled",
          "group": "navigation@2"
        },
        {
          "command": "patternColorization.refreshPatterns",
          "when": "view == patternColorizationView",
          "group": "navigation@3"
        },
        {
          "command": "patternColorization.clearPatterns",
          "when": "view == patternColorizationView",
          "group": "1_actions@1"
        },
        {
          "command": "patternColorization.importPatterns",
          "when": "view == patternColorizationView",
          "group": "2_import_export@1"
        },
        {
          "command": "patternColorization.exportPatterns",
          "when": "view == patternColorizationView",
          "group": "2_import_export@2"
        },
        {
          "command": "patternColorization.showStats",
          "when": "view == patternColorizationView",
          "group": "3_info@1"
        }
      ],
      "view/item/context": [
        {
          "command": "patternColorization.changePatternColor",
          "when": "view == patternColorizationView && viewItem == patternItem",
          "group": "1_color@1"
        },
        {
          "command": "patternColorization.editPattern",
          "when": "view == patternColorizationView && viewItem == patternItem",
          "group": "2_modification@1"
        },
        {
          "command": "patternColorization.deletePattern",
          "when": "view == patternColorizationView && viewItem == patternItem",
          "group": "2_modification@2"
        }
      ],
      "view/item/inline": [
        {
          "command": "patternColorization.togglePattern",
          "when": "view == patternColorizationView && viewItem == patternItem",
          "group": "inline@1"
        }
      ],
      "editor/context": [
        {
          "command": "patternColorization.addFromSelection",
          "when": "editorHasSelection",
          "group": "2_patterns@1"
        }
      ],
      "commandPalette": [
        {
          "command": "patternColorization.addFromSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "patternColorization.togglePattern",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Pattern Colorization",
      "properties": {
        "patternColorization.caseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "Whether pattern matching should be case sensitive"
        },
        "patternColorization.wholeWord": {
          "type": "boolean",
          "default": false,
          "description": "Whether to match whole words only"
        },
        "patternColorization.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether pattern highlighting is enabled"
        }
      }
    },
    "colors": [
      {
        "id": "patternColorization.color0.background",
        "description": "Background color for pattern 0 (Soft Blue)",
        "defaults": {
          "dark": "#1E3A8A60",
          "light": "#E3F2FD88",
          "highContrast": "#0066CC"
        }
      },
      {
        "id": "patternColorization.color0.border",
